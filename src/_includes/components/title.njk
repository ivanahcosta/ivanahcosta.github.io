{% macro section(text, icon, linkText, linkIcon, link) %}
  <div class="py-4 flex gap-4 items-center justify-between">
    {%if text %}
      <h6 class="flex gap-2">
        {%if icon %}
          {% svg icon, 'w-[1em] aspect-square'%}
        {% endif %}
        <span class="uppercase">{{text}}</span>
      </h6>
      {%if link %}
        <a class="flex gap-2" href="{{ link }}" target="_blank">
          {%if linkIcon %}
            {% svg linkIcon, 'w-[1em] aspect-square'%}
          {% endif %}
          <span>{{ linkText }}</span>
        </a>
      {% endif %}
    {% endif %}
  </div>
{% endmacro %}