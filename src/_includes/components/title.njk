{% macro primary(params) %}
  <div>
    <div class="flex gap-5 items-center">
      <span class="w-10 h-10 border-[2px] font-bold rounded-full flex items-center justify-center smd:-ml-[60px]">
        <span class="text-[0.7em] leading-none">{{params.number}}</span>
      </span>
      <h4 class="leading-none">{{params.text | safe}}</h4>
    </div>
  </div>
{% endmacro %}
{% macro secondary(params) %}
  <div>
    <div class="flex gap-5 items-center">
      <span class="w-10 h-10 border-[2px] font-bold rounded-full flex items-center justify-center smd:-ml-[60px]">
        <span class="text-[0.7em] leading-none">{{params.number}}</span>
      </span>
      <h4 class="text-[2em] leading-none">{{params.text}}</h4>
    </div>
  </div>
{% endmacro %}
{% macro tertiary(params) %}
  <h4>
    <span>{{params.number}}</span>
    <span>{{params.text}}</span>
  </h4>
{% endmacro %}