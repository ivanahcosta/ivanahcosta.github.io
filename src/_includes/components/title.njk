{% macro primary(params) %}
  <div class="border-t py-5">
    <div class="flex gap-5 items-center opacity-70">
      <div class="w-10 flex justify-center">
        {% svg params.icon, 'w-[1em] aspect-square' %}
      </div>
      <h4 class="bg-stone-200 p-2 text-[0.8em]">{{ params.text | safe }}</h4>
    </div>
  </div>
{% endmacro %}
