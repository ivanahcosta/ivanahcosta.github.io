<section class="pb-10" id="projects">
  <div class="grid grid-cols-1 divide-y divide-[#2B303B]/40">
    {% asyncEach project in collections['projects'] | reverse %}
    <div class="py-10">
      <div class="container grid grid-cols-1 gap-5">
        <div class="flex items-center gap-5">
          <div class="border border-[#2B303B] text-[#ffffff] font-serif w-10 h-10 rounded-full flex items-center justify-center">
            {{ project.data.date | dateToFormat('yy') }}
          </div>
        </div>
        <div class="grid grid-cols-3 gap-10">
          <div>
            <div class="grid grid-cols-1 gap-5">
              <h3 class="text-[2em] leading-none text-[#ffffff] font-serif">{{ project.data.title }}</h3>
              <p class="pr-10">{{ project.data.description }}</p>
              <div class="flex gap-5">
                {% for item in project.data.services %}
                  <span class="border border-[#2B303B]/40 rounded-full leading-none px-3 py-2 text-[0.8em] uppercase">
                    <span>{{ item }}</span>
                  </span>
                {% endfor %}
              </div>
              <div class="flex gap-5 items-center">
                <div class="w-10 h-10 rounded-full scale-50" style="background-color: {{ project.data.color }}"></div>
                {% if project.data.available %}
                  <a class="bg-[#15181E] text-[#ffffff] p-2 rounded-full inline-flex items-center gap-2" href="{{ project.data.link }}" target="_blank">
                    {% svg 'link', 'w-[1em] aspect-square box-content bg-[#22262F] rounded-full p-2' %}
                    <span>{{ project.data.link.replace('https://www.', '') }}</span>
                  </a>
                {% else %}
                  <span class="bg-[#15181E] text-[#ffffff] p-2 rounded-full inline-flex items-center gap-2 opacity-70">
                    {% svg 'no-link', 'w-[1em] aspect-square box-content bg-[#22262F] rounded-full p-2' %}
                    <span class="line-through">{{ project.data.link.replace('https://www.', '') }}</span>
                  </span>
                {%endif %}
              </div>
            </div>
          </div>
          <div class="flex items-end">
            <div class="grid grid-cols-1 divide-y divide-[#2B303B]/40 border-t border-[#2B303B]">
              <div class="py-5 grid grid-cols-2 gap-10">
                <div class="flex gap-5">
                  <p class="text-[#ffffff] font-serif">Client</p>
                  <p class="">{{ project.data.client }}</p>
                </div>
                <div class="flex gap-5"></div>
              </div>
              <div class="py-5 grid grid-cols-2 gap-10">
                <div class="flex gap-5">
                  <p class="text-[#ffffff] font-serif">Type</p>
                  <p class="">{{ project.data.type }}</p>
                </div>
                <div class="flex gap-5">
                  <p class="text-[#ffffff] font-serif">Agency</p>
                  <p class="">{{ project.data.agency }}</p>
                </div>
              </div>
              <div class="py-5 grid grid-cols-2 gap-10">
                <div class="flex gap-5">
                  <p class="text-[#ffffff] font-serif">Tech</p>
                  <div>
                    <p class="flex flex-wrap gap-2">
                      {% for item in project.data.tech %}
                        <span class="border border-[#2B303B]/40 rounded-full leading-none px-3 py-2 text-[0.8em] uppercase">
                          <span>{{ item }}</span>
                        </span>
                      {% endfor %}
                    </p>
                  </div>
                </div>
                <div class="flex gap-5">
                  <p class="text-[#ffffff] font-serif">With</p>
                  <div>
                    <p class="flex flex-wrap gap-2">
                      {% for item in project.data.team %}
                        <span class="border border-[#2B303B]/40 rounded-full leading-none px-3 py-2 text-[0.8em] uppercase">
                          <span>{{ item.name | abbrFirstName }}</span>
                          <span class="opacity-60">({{ item.position }})</span>
                        </span>
                      {% endfor %}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="flex items-start">
            {% if project.data.thumbnail | length %}
              <div class="flex items-center justify-center p-[100px] rounded-xl relative" style="background-color: {{ project.data.color }}">
                {% for item in project.data.thumbnail %}
                  <div class="{% if not loop.first %}hidden{% endif %}">
                    {% image item,
                    project.data.title,
                    '100vw' %}
                  </div>
                {% endfor %}
                <div class="absolute bottom-10 right-10 flex items-center justify-end gap-2">
                  {% for item in project.data.thumbnail %}
                    <div class="bg-white rounded-full w-3 h-3"></div>
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    {% endeach %}
  </div>
</section>