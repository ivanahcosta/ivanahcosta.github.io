{% if services %}
  <section id="services">
    <div class="container">
      <div class="border-t" data-line></div>
    </div>
    <div class="container grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-10 items-start" data-section-heading>
      <div class="hidden lg:flex gap-3 items-center">
        <span>ℹ</span>
        <span>Info</span>
      </div>
      <div>
        <div class="flex gap-3 items-center text-red">
          <span>({{ servicesList | length }})</span>
          <span>Capabilities</span>
        </div>
        <div class="pt-3 lg:pt-10 grid grid-cols-2 md:grid-cols-1 gap-5 gap-y-1 items-start">
          {% for item in servicesList %}
            <div class="flex gap-3 items-start">
              <span>↳</span>
              <span>{{ item }}</span>
            </div>
          {%endfor %}
        </div>
      </div>
      <div>
        <div class="flex gap-3 items-center text-red">
          <span>({{ toolsList | length }})</span>
          <span>Tools</span>
        </div>
        <div class="pt-3 lg:pt-10 grid grid-cols-2 md:grid-cols-1 gap-5 gap-y-1 items-start">
          {% for item in toolsList %}
            <div class="flex gap-3 items-start">
              <span>↳</span>
              <span>{{ item }}</span>
            </div>
          {%endfor %}
        </div>
      </div>
      <div>
        <div class="flex gap-3 items-center text-red">
          <span>({{ interestsList | length }})</span>
          <span>Interests</span>
        </div>
        <div class="pt-3 lg:pt-10 grid grid-cols-2 md:grid-cols-1 gap-5 gap-y-1 items-start">
          {% for item in interestsList %}
            <div class="flex gap-3 items-start">
              <span>↳</span>
              <span>{{ item }}</span>
            </div>
          {%endfor %}
        </div>
      </div>
    </div>
  </section>
{% endif %}