{% if selectedProjects %}
  <section class="pt-0 lg:-mt-10" id="selected-projects">
    <div class="container">
      <div class="border-t" data-line></div>
    </div>
    <div class="container grid grid-cols-1 lg:grid-cols-4 lg:gap-10" data-section-heading>
      <a class="hidden lg:flex gap-3 items-center opacity-50 hover:opacity-100 transition-all duration-300" href="{{ '#selected-projects' | url }}">
        <span class="bg-white text-black rounded-full aspect-square w-[2em] flex items-center justify-center">
          <span>â†˜</span>
        </span>
        <span>Scroll down</span>
      </a>
      <div class="flex gap-3 items-center text-red">
        <span>({{ collections['project'] | length }})</span>
        <span>Selected projects</span>
      </div>
      <div class="col-start-4 hidden lg:flex gap-3 items-center">
        <span>âœ¶</span>
        <span>2016 â€” 2023</span>
      </div>
    </div>
    <div class="lg:-mt-10 container lg:grid grid-cols-4 gap-10">
      {# projects wrapper #}
      <div class="col-start-2 col-span-3 grid grid-cols-1" data-projects>
        {% for item in collections['project'] | reverse %}
          {# project #}
          <div class="relative py-10 overflow-hidden flex flex-col gap-5 group" data-project>
            {# project heading #}
            <a class="relative block" href="{{ item.data.link }}" target="_blank" data-project-heading data-cursor-text="{{ 'â†—' if item.data.available else 'ðŸ›‡' }}">
              <div class="relative hover:!opacity-10 hover:!pl-20 transition-all duration-300">
                <div class="relative text-[2em] lg:text-[4.5vw] lg:-tracking-[5px]" data-project-heading-title>{{ item.data.shortTitle }}</div>
                <div class="absolute top-0 lg:top-3 right-0 w-[26%] lg:w-[29.5%] opacity-50 justify-between text-[0.8em] lg:text-[1em]">
                  <div>/{{ item.data.date | dateToFormat('yyyy') }}</div>
                  <div>{{ item.data.client }}</div>
                  <div>({{ item.data.type }})</div>
                </div>
                <div class="flex flex-wrap gap-1 w-[70%] lg:gap-3 items-center">
                  {% for service in item.data.services %}
                    <span class="text-[0.7em] border border-current rounded-full">{{ service }}</span>
                  {% endfor %}
                  {% for tech in item.data.tech %}
                    <span class="text-[0.7em] border border-current rounded-full">{{ tech }}</span>
                  {% endfor %}
                </div>
              </div>
            </a>
            {# project thumbnail #}
            <div class="hidden overflow-hidden lg:fixed lg:top-1/2 lg:left-1/2 lg:z-[1] lg:w-[490px] aspect-square lg:-translate-x-1/2 lg:-translate-y-1/2 rounded-xl bg-red pointer-events-none" data-project-thumbnail>
              {% if item.data.thumbnail %}
                <div>
                  {% image 'projects/' + item.data.title | slug + '/thumbnail.png',
                    item.data.title,
                    '100vw',
                    'w-full aspect-square' %}
                </div>
              {% endif %}
            </div>
            {# project content #}
            <div class="hidden" data-project-content>
              <a class="text-black {{ 'bg-red' if item.data.available else 'bg-white/50 line-through' }} flex gap-1 items-center justify-center p-5 px-3 rounded-xl" href="{{ item.data.link }}" target="_blank">
                <span>www.</span>
                <span>{{ item.data.link | cleanLink }}</span>
                <span>{{ 'â†—' if item.data.available else 'ðŸ›‡' }}</span>
              </a>
            </div>
          </div>
          {# project line #}
          {% if not loop.last %}
            <div class="border-t" data-line></div>
          {% endif %}
        {%endfor %}
      </div>
    </div>
  </section>
{% endif %}