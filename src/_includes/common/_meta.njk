<meta name="description" content="{{ description or site.description }}">
<link rel="canonical" href="{{ site.baseUrl }}">
<meta name="author" content="{{ site.author }}">
<meta name="generator" content="{{ eleventy.generator }}">

<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ title or site.meta.title }}">
<meta property="og:description" content="{{ description or site.meta.description }}">
<meta property="og:url" content="{{ site.baseUrl }}">
<meta property="og:locale" content="{{ site.locale }}">
<meta name="twitter:card" content="{% if site.meta.image %}summary_large_image{% else %}summary{% endif %}">
{% if site.meta.image %}
  <meta property="og:image" content="{{ site.baseUrl + site.meta.image | url }}">
{% endif %}

<link rel="apple-touch-icon" href="{{ '/assets/images/seo/apple-touch-icon.svg' | url }}" sizes="180x180">
<link rel="icon" href="{{ '/assets/images/seo/favicon.svg' | url }}" sizes="any"/>
<link rel="mask-icon" href="{{ '/assets/images/seo/mask-icon.svg' | url }}" color="#fb3f1a">
<meta name="theme-color" content="#FF3F00">

<link rel="manifest" href="manifest.json">