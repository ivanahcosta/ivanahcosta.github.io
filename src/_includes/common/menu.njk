<section class="fixed bottom-10 left-1/2 -translate-x-1/2 flex items-center gap-5 leading-none">
  <nav class="flex border bg-white shadow-md z-10 p-1">
    {% for item in menu %}
      <a class="p-3 px-4 flex gap-2 items-center {% if loop.first %}bg-stone-200 border{% endif %}" href="{{ item.link | url}}" {%if item.disabled %}disabled{% endif %}>
        <span>{{ item.text }}</span>
        {% if item.icon | length %}
          {% svg item.icon, 'w-[1em] aspect-square' %}
        {% endif %}
      </a>
    {% endfor %}
  </nav>
  <button class="border p-3 bg-white">
    {% svg 'arrow-down', 'w-[1em] aspect-square' %}
  </button>
</section>
