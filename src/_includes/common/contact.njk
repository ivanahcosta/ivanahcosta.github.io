<section class="py-10 bg-black text-stone-400 grid grid-cols-1 gap-5" id="contact">

  <div class="container">
    <h3 class="text-[0.7em] text-stone-600 font-bold uppercase pb-10 border-b border-white/10">
      Get in touch with me
      <sup>{{ collections['projects']  | length}}</sup>
    </h3>
  </div>
  <div class="container">
    <div class="grid grid-cols-1 divide-y divide-white/10">
      {% for item in social %}
        <a class="py-5 md:py-10 flex items-center justify-between" href="{{ item.link }}" target="_blank" data-hover="arrow-right-up">
          <span class="flex gap-5 md:text-[1.5em]">
            {% svg item.icon, 'w-[1em] aspect-square' %}
            <span>{{ item.text }}</span>
          </span>
          <span class="overflow-hidden flex items-center gap-10">
            <span class="text-stone-500">{{ item.user }}</span>
          </span>
        </a>
      {% endfor %}
    </div>
  </div>
</section>