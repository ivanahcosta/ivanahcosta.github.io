<section class="py-10 grid grid-cols-1 gap-10" id="contact" data-contact>
  <div class="container">
    <div class="grid grid-cols-1 divide-y">
      {% for item in social %}
        <a class="py-5 flex justify-between" href="{{ item.link }}" target="_blank">
          <span>{{ item.text }}</span>
          <button class="flex underline">
            <span>{{item.user}}</span>
            {%svg 'arrow-right-up', 'w-[1em] aspect-square'%}
          </button>
        </a>
      {% endfor %}
    </div>
  </div>
  <div class="container grid grid-cols-1 gap-10">
    {% for item in icebreakers %}
      <div class="flex gap-5 leading-none">
        {% image item.image, 'l', '100vw', 'w-10 h-10 aspect-square' %}
        <div>
          <span>{{item.title}}</span>
          <p>{{item.text}}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>