{% if header %}
  <header class="relative z-[1] lg:absolute top-0 left-0 w-full" id="header">
    <div class="container flex items-start justify-between lg:grid lg:grid-cols-4 gap-10">
      <div>
        {% include 'logo.njk' %}
      </div>
      <div class="col-start-4 hidden lg:flex items-start justify-between">
        <div class="grid grid-cols-1 gap-1">
          {% for item in professionalLinks %}
            <a class="inline-flex gap-3 items-center" href="{{ item.link }}" target="_blank" data-stagger-link>
              <span>↗</span>
              <span class="underline">{{ item.text }}</span>
            </a>
          {% endfor %}
        </div>
        <div class="grid grid-cols-1 gap-1">
          {% for item in socialLinks %}
            <a class="inline-flex gap-3 items-center" href="{{ item.link }}" target="_blank" data-stagger-link>
              <span>↗</span>
              <span class="underline">{{ item.text }}</span>
            </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </header>
{% endif %}