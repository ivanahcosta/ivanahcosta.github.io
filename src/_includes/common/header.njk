{% if header %}
  <header class="relative z-[1] py-5 gap-5" id="header">
    <div class="container flex gap-0 md:gap-10 items-center justify-between">
      <div>
        {% include 'logo.njk' %}
      </div>
      <div>
        <a class="border border-current rounded-full inline-flex xl:gap-3 items-center" href="{{ '#contact' | url }}" data-cursor-text="↓">
          <span class="hidden lg:inline">Available from Jul'23</span>
          <span class="hidden lg:inline">・</span>
          <span class="underline">Get in touch</span>
        </a>
      </div>
      <div class="hidden lg:flex gap-5 items-center">
        {% for item in professionalLinks %}
          <a class="underline inline-flex gap-3 items-center" href="{{ item.link }}" target="_blank" data-cursor-text="↗">
            <span>{{ item.text }}</span>
          </a>
        {% endfor %}
      </div>
    </div>
    {# <div class="container">
      <div class="border-b"></div>
    </div> #}
  </header>
{% endif %}