{% if footer %}
  <footer id="footer">
    <div class="container">
      <div class="border-t"></div>
    </div>
    <div class="container flex flex-col md:flex-row gap-5 md:gap-10 justify-between">
      <div class="hidden md:flex gap-5 justify-between">
        <p>©{{ site.buildTime | dateToFormat('yyyy') }} Ivana Costa. All rights reserved.</p>
      </div>
      <div class="flex flex-col md:flex-row gap-5">
        <div class="flex gap-5 justify-between md:justify-start">
          <button class="border rounded-full underline inline-flex gap-3 items-center uppercase" data-cursor="❤︎">
            <span>Credits</span>
          </button>
          <a class="border rounded-full underline inline-flex gap-3 items-center" href="{{ '/#about' | url }}" data-cursor="↑">
            <span>Go back to top</span>
          </a>
        </div>
      </div>
    </div>
  </footer>
{% endif %}