{% if contact %}
  <section id="contact">
    <div class="container">
      <div class="border-t" data-section-line></div>
    </div>
    <div class="container grid grid-cols-2 lg:grid-cols-4 gap-10" data-section-heading>
      <div class="lg:col-start-2">
        <h2 class="inline-flex gap-3">
          <span>✉</span>
          <span>Get in touch</span>
        </h2>
      </div>
      <div class="lg:col-start-4">
        <p class="inline-flex gap-3">
          <span>☺</span>
          <span>Drop me a mail</span>
        </p>
      </div>
    </div>
    <div class="relative container group" style="container-type: inline-size;" data-contact>
      <a class="grid lg:flex grid-cols-1 text-red text-[15.5cqw] lg:text-[8.4cqw] leading-[1] -tracking-[0.5cqw]" href="mailto:ivanahcosta@gmail.com" targe="_blank" data-contact-mail data-link-external>
        <span>ivanahcosta</span>
        <span>@gmail.com</span>
      </a>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none" data-contact-badge>
        <div class="w-[150px] aspect-square rounded-full flex items-center justify-center text-[3em] lg:text-[2em] bg-gray text-black scale-[0.7] lg:scale-[1] group-hover:bg-red lg:transition-all lg:duration-300">
          <div>↗</div>
          <svg class="absolute top-0 left-0 w-[150px] h-[150px] scale-[0.8] tracking-[0.2em] lg:tracking-[0.35em]" width="300" height="300" viewBox="0 0 300 300">
            <defs>
              <path id="circlePath" d="M 150, 150 m -120, 0 a 120,120 0 0,1 240,0 a 120,120 0 0,1 -240,0 "/>
            </defs>
            <g>
              <use xlink:href="#circlePath" fill="none"/>
              <text class="fill-black">
                <textPath xlink:href="#circlePath">Available from Jul'23 ▪</textPath>
              </text>
            </g>
          </svg>
        </div>
      </div>
    </div>
  </section>
{% endif %}