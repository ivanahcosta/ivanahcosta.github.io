{% if contact %}
  <section id="contact">
    <div class="container">
      <div class="border-t" data-section-line></div>
    </div>
    <div class="container grid grid-cols-2 lg:grid-cols-4 gap-10" data-section-heading>
      <div class="lg:col-start-2">
        <h2 class="inline-flex gap-3">
          <span>✉</span>
          <span>Get in touch</span>
        </h2>
      </div>
      <div class="lg:col-start-4">
        <p class="inline-flex gap-3">
          <span>☺</span>
          <span>Drop a mail</span>
        </p>
      </div>
    </div>
    <div class="container" style="container-type: inline-size;" datas-contact>
      <a class="grid lg:flex grid-cols-1 text-red text-[15.5cqw] lg:text-[8.4cqw] leading-[1] -tracking-[0.5cqw]" href="mailto:ivanahcosta@gmail.com" targe="_blank" data-contact-mail data-link-external>
        <span>ivanahcosta</span>
        <span>@gmail.com</span>
      </a>
      <div class="hidden" data-contact-badge>
        <p>↗</p>
        <svg width="300" height="300" viewBox="0 0 300 300">
          <defs>
            <path id="criclePath" d="M 150, 150 m -120, 0 a 120,120 0 0,1 240,0 a 120,120 0 0,1 -240,0 "/>
          </defs>
          <g>
            <use xlink:href="#criclePath" fill="none"/>
            <text>
              <textPath xlink:href="#criclePath">Available from Jul'23 ▪</textPath>
            </text>
          </g>
        </svg>
      </div>
    </div>
  </section>
{% endif %}