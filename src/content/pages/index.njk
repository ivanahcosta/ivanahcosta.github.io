{% import "components/title.njk" as title %}

{% include 'common/header.njk' %}
{% include 'common/hero.njk' %}
<section class="pt-10 px-5 md:px-10" id="works">
  <div class="container">
    {{ title.primary({text: 'Selected works <sup>' + collections['projects'].length + '</sup>', icon: 'dot-grid-fill'}) }}
  </div>
  <div class="grid grid-cols-1 divide-y">
    {% asyncEach project in collections['projects'] | reverse %}
    <a class="py-5" href="{{project.url}}">
      <div class="container flex gap-5 md:gap-10 items-center justify-between">
        <div class="flex gap-5 items-center">
          <div class="w-10 aspect-square bg-stone-200"></div>
          <div>
            <h3 class="flex gap-5">
              <span class="truncate max-w-[200px] md:max-w-auto">{{ project.data.title }}</span>
              {% if loop.first %}
                <span class="text-[0.8em] leading-none px-2 bg-green-500 flex items-center">
                  <span>new</span>
                </span>
              {% endif %}
            </h3>
            <p class="opacity-50">{{ project.data.type }} — {{ project.data.date | dateToFormat('yyyy')}}</p>
          </div>
        </div>
        <div class="flex">
          <button class="flex p-3 border">
            {%svg 'arrow-right', 'w-[1em] aspect-square'%}
          </button>
        </div>
      </div>
    </a>
    {% endeach %}
  </div>
</section>

