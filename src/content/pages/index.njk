<section class="grid grid-cols-1 gap-10" id="projects" data-projects>
  <div class="container grid grid-cols-1 divide-y">
    {% asyncEach project in collections['projects'] | reverse %}
    <a class="py-5 flex gap-10 justify-between" href="{{project.url}}" data-project>
      <div>
        <span>{{ project.data.date | dateToFormat('yy') }}</span>
        <span>â€”</span>
        <span>{{project.data.title}}</span>
      </div>
      <button class="flex underline">
        <span>View project</span>
        {%svg 'plus', 'w-[1em] aspect-square'%}
      </button>
    </a>
    {% endeach %}
  </div>
  <div class="container flex items-center justify-center">
    <a class="flex underline" href="/lab">
      <span>View labs page</span>
      {%svg 'potion', 'w-[1em] aspect-square'%}
    </a>
  </div>
</section>